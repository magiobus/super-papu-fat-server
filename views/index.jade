extends layout

block content
  div(id="mainContainer")
    div(id="resetLocation")
      input(type="image", value="*",onClick="initMap()", id="center")   	
    div(id="progressBar")
    div(id="avatarImage")
    div(id="mapContainer" style="height:100%; width:100%; display:block")
      div(id="map")




    // Trigger/Open The Modal
  button#myBtn Open Modal
    // The Modal
    #myModal.modal
      // Modal content
      .modal-content
        .modal-header
          span.close &times;
          div(id='profile-pic')
           img(id="myProfileImage", src="https://pbs.twimg.com/profile_images/466608337262350336/Ybpv3YAt.jpeg", alt="helloMyFriend")
          |       
          h2 Mariana
        |     
        .modal-body
          p ¿Qué opinas de su comida?
          input(type="text" id="calif")       
          p Some other pic...
           
        |     
        .modal-footer
           hr
           input.button.nosano(type="button", value="No Sano", id="nsano") 
           input.button.sano(type="button", value="Sano", id="sano") 

block scripts
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js")
  script(async='', defer='', src='https://maps.googleapis.com/maps/api/js?key=AIzaSyAW3JnAkxa949CeXgum563tsz_6EahZJZ8&signed_in=true&callback=initMap')
  
  script(src="js/js.js")
  script(src="js/photoImage.js")
